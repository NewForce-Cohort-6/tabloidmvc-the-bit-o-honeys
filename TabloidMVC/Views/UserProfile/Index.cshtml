@model TabloidMVC.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container pt-5">
    <h1>Users</h1>

    <p>
        <a class="btn btn-primary" asp-action="Register">New User</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserProfile.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserProfile.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserProfile.UserType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserProfile item in Model.UserProfiles)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @foreach (UserType type in Model.UserTypes)
                        {
                            if (type.Id == item.UserTypeId)
                            {
                                @Html.DisplayFor(modelItem => type.Name)
                            }
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        @*<a asp-action="EditType" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit User Type">
                            <i class="fas fa-pencil-alt"></i>
                        </a>*@
                        
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>